pcm.rawjack2alsaloop {
    type jack
    playback_ports {
        0 alsa_loop:input_1
        1 alsa_loop:input_2
    }
}

pcm.rawjack2brutefir {
    type jack
    playback_ports {
        0 brutefir:in.L
        1 brutefir:in.R
    }
}

# This plugin is intended to be used from alsa players
# associated to pre.di.c alsa_loop jack ports
pcm.jack {
    type plug
    slave { pcm "rawjack2alsaloop" }
    hint {
    description "JACK plugin -> alsa_loop"
    }
}

# This plugin is intended to be used from alsa players
# that directly want to play to pre.di.c bypassing the inputs selector,
# e.g. the high volume beep alert from the mouse_volume_daemon.py
pcm.jackbrutefir {
    type plug
    slave { pcm "rawjack2brutefir" }
    hint {
    description "JACK plugin -> brutefir"
    }
}

pcm.!default {
    type plug
    slave { pcm "rawjack" }
}

pcm.alsafile {
    type file
    slave { pcm "null" }
    file "alsafile.wav"
    format "wav"
}
